<div class="card card-block">
	<table class="table table-hover">
	  <thead>
	    <tr>
	  		<th>Event</th>
	      <th>Ticket Type</th>
	      <th>Price</th>
	      <th>Total Price</th>
	    </tr>
	  </thead>
			<% order.order_items.each do |order_item| %>
		  <tbody>
		    <tr>
		      <td><%= order_item.ticket_type.event.name %></td>
		      <td><%= order_item.ticket_type.name %></td>
		      <td><%= "#{number_to_currency(order_item.ticket_type.price, unit: 'VND', precision: 0)} x #{order_item.quantity}" %></td>
		      <td><%= number_to_currency(order_item.ticket_type.price * order_item.quantity, unit: 'VND', precision: 0)</td>
		    </tr>
		  </tbody>
		  <% end %>
		</table>
</div>